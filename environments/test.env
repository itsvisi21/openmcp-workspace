# Test Environment Configuration

# Project Settings
PROJECT_NAME=OpenMCP
VERSION=0.1.0
API_V1_STR=/api/v1

# Security
JWT_SECRET_KEY=test_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./test.db

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./test_storage
IPFS_NODE_URL=http://localhost:5001

# AWS Settings
AWS_ACCESS_KEY_ID=test_aws_access_key
AWS_SECRET_ACCESS_KEY=test_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=openmcp-test-bucket

# LLM Services
OPENAI_API_KEY=test_openai_key
ANTHROPIC_API_KEY=test_anthropic_key
DEFAULT_LLM_PROVIDER=openai

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_MULTIPROC_DIR=./test_metrics
SENTRY_DSN=test_sentry_dsn

# MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001
MCP_SERVER_LOG_LEVEL=DEBUG

# Backend
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_LOG_LEVEL=DEBUG

# Dashboard
DASHBOARD_HOST=localhost
DASHBOARD_PORT=3000
DASHBOARD_LOG_LEVEL=DEBUG

# MCP Server Settings
MCP_PROJECT_NAME=OpenMCP Test
MCP_VERSION=0.1.0
MCP_API_V1_STR=/api/v1
MCP_BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
MCP_OPENAI_API_KEY=your_openai_key_here
MCP_ANTHROPIC_API_KEY=your_anthropic_key
MCP_DEFAULT_LLM_PROVIDER=openai
MCP_MAX_TOKENS=2000
MCP_POSTGRES_USER=postgres
MCP_POSTGRES_PASSWORD=postgres
MCP_POSTGRES_SERVER=localhost
MCP_POSTGRES_PORT=5432
MCP_POSTGRES_DB=openmcp_test
MCP_ENABLE_MONITORING=true
MCP_MONITORING_INTERVAL=60

# Backend Settings
BACKEND_PROJECT_NAME=OpenMCP Backend Test
BACKEND_VERSION=0.1.0
BACKEND_API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
BACKEND_POSTGRES_USER=postgres
BACKEND_POSTGRES_PASSWORD=postgres
BACKEND_POSTGRES_SERVER=localhost
BACKEND_POSTGRES_PORT=5432
BACKEND_POSTGRES_DB=openmcp_backend_test
BACKEND_ENABLE_MONITORING=true
BACKEND_MONITORING_INTERVAL=60

# Dashboard Settings
DASHBOARD_PROJECT_NAME=OpenMCP Dashboard Test
DASHBOARD_VERSION=0.1.0
DASHBOARD_API_URL=http://localhost:8001
DASHBOARD_BACKEND_URL=http://localhost:8000

# Storage Settings (Local for tests)
STORAGE_BASE_PATH=./test_data 