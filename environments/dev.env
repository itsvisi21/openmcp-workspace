# Development Environment Configuration

# Project Settings
PROJECT_NAME=OpenMCP
VERSION=0.1.0
API_V1_STR=/api/v1

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./dev.db

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./dev_storage
IPFS_NODE_URL=http://localhost:5001

# AWS Settings
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=openmcp-dev-bucket

# LLM Services
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
DEFAULT_LLM_PROVIDER=openai

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_MULTIPROC_DIR=./dev_metrics
SENTRY_DSN=your_sentry_dsn_here

# MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001
MCP_SERVER_LOG_LEVEL=DEBUG

# Backend
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_LOG_LEVEL=DEBUG

# Dashboard
DASHBOARD_HOST=localhost
DASHBOARD_PORT=3000
DASHBOARD_LOG_LEVEL=DEBUG

# MCP Server Settings
MCP_PROJECT_NAME=OpenMCP Development
MCP_VERSION=0.1.0
MCP_API_V1_STR=/api/v1
MCP_BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
MCP_OPENAI_API_KEY=your_openai_key_here
MCP_ANTHROPIC_API_KEY=your_anthropic_key_here
MCP_DEFAULT_LLM_PROVIDER=openai
MCP_MAX_TOKENS=2000
MCP_DATABASE_URL=sqlite:///./test.db
MCP_ENABLE_MONITORING=false
MCP_MONITORING_INTERVAL=60

# Backend Settings
BACKEND_PROJECT_NAME=OpenMCP Backend
BACKEND_VERSION=0.1.0
BACKEND_API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
BACKEND_DATABASE_URL=sqlite:///./test.db
BACKEND_ENABLE_MONITORING=false
BACKEND_MONITORING_INTERVAL=60

# Dashboard Settings
DASHBOARD_PROJECT_NAME=OpenMCP Dashboard
DASHBOARD_VERSION=0.1.0
DASHBOARD_API_URL=http://localhost:8001
DASHBOARD_BACKEND_URL=http://localhost:8000

# Storage Settings (Local for development)
STORAGE_BASE_PATH=./data 