# Production Environment Settings

# MCP Server Settings
MCP_PROJECT_NAME=OpenMCP Production
MCP_VERSION=0.1.0
MCP_API_V1_STR=/api/v1
MCP_BACKEND_CORS_ORIGINS=["https://your-production-domain.com"]
MCP_OPENAI_API_KEY=your_openai_key_here
MCP_ANTHROPIC_API_KEY=your_anthropic_key_here
MCP_DEFAULT_LLM_PROVIDER=openai
MCP_MAX_TOKENS=2000
MCP_DATABASE_URL=postgresql://user:password@your-production-db-host:5432/openmcp_prod
MCP_ENABLE_MONITORING=true
MCP_MONITORING_INTERVAL=60

# Backend Settings
BACKEND_PROJECT_NAME=OpenMCP Backend Production
BACKEND_VERSION=0.1.0
BACKEND_API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["https://your-production-domain.com"]
BACKEND_DATABASE_URL=postgresql://user:password@your-production-db-host:5432/openmcp_backend_prod
BACKEND_ENABLE_MONITORING=true
BACKEND_MONITORING_INTERVAL=60

# Dashboard Settings
DASHBOARD_PROJECT_NAME=OpenMCP Dashboard Production
DASHBOARD_VERSION=0.1.0
DASHBOARD_API_URL=https://api.your-production-domain.com
DASHBOARD_BACKEND_URL=https://backend.your-production-domain.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-production-bucket

# Storage Settings (AWS S3 for production)
STORAGE_TYPE=s3
STORAGE_BASE_PATH=s3://your-production-bucket 