# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend Settings
VITE_API_URL=http://localhost:8000
VITE_MCP_SERVER_URL=http://localhost:8545

# Backend Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4
BACKEND_RELOAD=true

# MCP Server Settings
MCP_HOST=0.0.0.0
MCP_PORT=8545
MCP_WORKERS=4

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=openmcp
POSTGRES_USER=openmcp
POSTGRES_PASSWORD=change_me

# S3 Settings
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=openmcp-storage

# LLM Settings
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
DEFAULT_LLM_PROVIDER=openai
MAX_TOKENS=4096

# Security Settings
JWT_SECRET=change_me
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
CORS_ORIGINS=http://localhost:3000

# Feature Flags
ENABLE_IPFS=false
ENABLE_SMART_CONTRACTS=false
ENABLE_CROSS_CHAIN=false

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_MULTIPROC_DIR=/tmp 